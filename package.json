{
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.77.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.54.0",
    "stylelint": "^14.9.1",
    "stylelint-config-twbs-bootstrap": "^5.0.0"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.5",
    "bootstrap": "^5.2.0",
    "bootstrap-icons": "^1.9.1"
  },
  "scripts": {
    "js-dev": "rollup --config",
    "js-dev-watch": "rollup --config --watch",
    "js-prod": "rollup --config --environment BUILD:production",
    "css-dev": "sass resources/scss/index.scss public/css/index.css",
    "css-dev-watch": "sass --watch resources/scss/index.scss public/css/index.css",
    "css-prod": "sass --no-source-map --style=compressed resources/scss/index.scss public/css/index.css",
    "css-lint": "stylelint resources/scss/",
    "dev": "npm-run-all --parallel js-dev css-dev",
    "prod": "npm-run-all --parallel js-prod css-prod",
    "watch": "npm-run-all --parallel js-dev-watch css-dev-watch",
    "test": "npm-run-all --parallel css-lint",
    "php": "composer dev",
    "all": "npm-run-all --parallel php watch"
  }
}
