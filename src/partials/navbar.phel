(ns app\partials\navbar)

(defn- is-active-class [active-item path]
  (cond
    (string? path) (if (= active-item path) " active" "")
    (tuple? path) (if (find (fn [x] (= active-item x)) path) " active" "")))

(defn render [active-item]
